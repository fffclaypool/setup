{
    "name": "java-local-development-container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "timonwong.shellcheck",
                "foxundermoon.shell-format",
                "DavidAnson.vscode-markdownlint"
            ]
        },
        "remoteUser": "vscode"
    }
}
